{
  "name": "entando-cms",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "brace": "^0.11.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "history": "^4.9.0",
    "prop-types": "^15.6.0",
    "react": "^16.8.6",
    "react-ace": "^7.0.2",
    "react-bootstrap-typeahead": "^3.4.6",
    "react-dom": "^16.8.6",
    "react-draggable": "^3.3.0",
    "react-intl": "^2.8.0",
    "react-redux": "^7.0.1",
    "react-scripts": "2.1.8",
    "redux": "^4.0.1",
    "redux-form": "^8.2.0",
    "redux-mock-store": "^1.5.3",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "coverage": "react-scripts test --coverage"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/serviceWorker.js",
      "!src/state/store.js",
      "!src/testutils/**/*.js",
      "!src/ui/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "airbnb"
    ],
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": [
            "node_modules",
            "src"
          ]
        }
      }
    },
    "rules": {
      "react/jsx-one-expression-per-line": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  },
  "eslintIgnore": [
    "serviceWorker.js"
  ],
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "eslint-config-airbnb": "^17.1.0",
    "husky": "^1.3.1",
    "node-sass": "^4.11.0",
    "sass-lint": "^1.12.1"
  },
  "peerDependencies": {
    "@entando/apimanager": "^3.0.2",
    "@entando/messages": "^1.0.4",
    "@entando/menu": "^2.0.0",
    "@entando/utils": "^2.0.0",
    "lodash": "^4.17.10",
    "react-patternfly": "^1.0.0",
    "react-router-dom": "^5.0.0",
    "patternfly": "^3.45.0",
    "patternfly-react": "^1.19.1",
    "react-bootstrap": "^0.32.1",
    "moment": "^2.22.1",
    "react-datepicker": "^1.4.1",
    "flux-standard-action": "^2.0.1"
  }
}
